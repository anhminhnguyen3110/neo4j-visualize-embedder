# Test Environment Configuration
# Copy this to .env.test and configure for your test database

# Application
NODE_ENV=test
PORT=3001
HOST=0.0.0.0

# Neo4j Test Database
# IMPORTANT: Use a separate test database, NOT your production database!
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your-test-password
NEO4J_DATABASE=testdb  # Use a separate test database

# JWT (use different secret for test)
JWT_SECRET=test-secret-key-min-32-characters-long-for-testing
JWT_EXPIRATION=7d
JWT_ALGORITHM=HS256

# Security
BCRYPT_SALT_ROUNDS=10  # Lower for faster tests

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Embed
EMBED_BASE_URL=http://localhost:3001
MAX_TOKEN_EXPIRY_DAYS=90
DEFAULT_TOKEN_EXPIRY_DAYS=7

# Logging
LOG_LEVEL=error  # Less verbose in tests
